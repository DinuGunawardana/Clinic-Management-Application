<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/echo_recyclerview_id"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvuserid1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="User Id"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/echo_recyclerview_id" />

        <TextView
            android:id="@+id/tvecho1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:text="Echo"
            android:gravity="center"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="@id/tvuserid1"
            app:layout_constraintStart_toStartOf="@id/tvuserid1"
            app:layout_constraintTop_toBottomOf="@id/tvuserid1"/>

        <TextView
            android:id="@+id/tvdate1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Date"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="@id/tvecho1"
            app:layout_constraintStart_toStartOf="@id/tvecho1"
            app:layout_constraintTop_toBottomOf="@id/tvecho1"/>

    <!--    <Button-->
