<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_recyclerview_id1"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toStartOf="@+id/tvuserid2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/tvuserid2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="User Id"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_recyclerview_id1"
        app:layout_constraintTop_toTopOf="@id/image_recyclerview_id1"/>

    <TextView
        android:id="@+id/angiogram2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Angiogram2"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@id/tvuserid2"
        app:layout_constraintStart_toStartOf="@id/tvuserid2"
        app:layout_constraintTop_toBottomOf="@id/tvuserid2"/>

    <TextView
        android:id="@+id/date2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Date"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@id/angiogram2"
        app:layout_constraintStart_toStartOf="@id/angiogram2"
        app:layout_constraintTop_toBottomOf="@id/angiogram2"/>

</androidx.constraintlayout.widget.ConstraintLayout>